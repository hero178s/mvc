@model IEnumerable<QLTA.Models.LoaiThucAn>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Loại món ăn</h2>

<p>
    <button onclick="location.href='@Url.Action("Create")';return false ;" style="background-color: #FFFFCC">Thêm loại</button>
    @*@Html.ActionLink("Thêm loại", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenTL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTL)
        </td>
        <td>
            <button onclick="location.href='@Url.Action("Edit", new { id = item.Id })';return false ;" style="background-color: #99FFCC">Chỉnh sửa</button>
            
            <button onclick="location.href='@Url.Action("Delete",new { id = item.Id })';return false;" style="margin-left: 10px; background-color: #99FFCC">Xóa</button>
            
            <button onclick="location.href='@Url.Action("Details",new { id = item.Id })';return false;" style="margin-left: 10px; background-color: #99FFCC ">Thông tin loại</button>
        </td>
    </tr>
}

</table>
